# Turn on the rewrite engine
RewriteEngine On

# Redirect to non-www version
RewriteCond %{HTTP_HOST} ^www\.eldorado-tours\.com [NC]
RewriteRule ^(.*)$ https://eldorado-tours.com/$1 [L,R=301]

# Redirect to HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remove .html extension from URLs
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# Custom redirects for specific pages
RewriteRule ^tours/(.*)$ tours.html#$1 [L]
RewriteRule ^blog/(.*)$ blog.html#$1 [L]